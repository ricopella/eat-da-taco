
<header>

        <h1>EAT-DA-TACOS!</h1>

    <div class="picture">
            <img src="assets/images/taco-.png" alt="Taco Image">
    </div>

</header>

<div class="flex-container">

    <div class="align-item eat">
        <h2>Ready to Eat!</h2>
            <ul class="icon">
              {{#each taco}}
              {{#unless this.devoured}}
                  <li class="fork">
                    {{this.taco_name}}
                    <form action="/{{this.id}}?=PUT" method="POST">
                      <input type="hidden" name="devoured" value="1">
                      <button class="dev" type="submit">Devour it!</button>
                    </form>
                  </li>
                  {{/unless}}
              {{/each}}
            </ul>
    </div>

    <div class="align-item addTaco">
        <div>
            <h2>Create a Taco!</h2>
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                  <input type="text" id="ta" name="taco_name" placeholder="Taco Name">
                </div>
                <button id="addTaco" type="submit">Add Taco</button>
            </form>
        </div>
    </div>

    <div class="align-item devoured">
        <h2>Devoured</h2>
            <ul class="icon">
                {{#each taco}}
              {{#if this.devoured}}
                  <li>
                    {{this.taco_name}}
                  </li>
              {{/if}}
              {{/each}}
            </ul>
    </div>

<!-- Modal -->
<div class="modal modal-wide " id="incompleteForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog ezCustTrans">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title" id="myModalLabel">ERROR</h4>
      </div>
      <div class="modal-body">
        PLEASE ENTER A TACO NAME
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


</div>